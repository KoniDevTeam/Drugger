<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity" android:animateLayoutChanges="true"
>

	<android.support.design.widget.FloatingActionButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:clickable="true" app:srcCompat="@drawable/add_inverted"
			android:id="@+id/addTripButton"
			app:backgroundTint="@color/colorPrimary"
			app:maxImageSize="@android:dimen/app_icon_size"
			app:fabSize="normal" android:focusable="true" android:visibility="visible"
			app:layout_constraintBottom_toTopOf="@+id/bottomNavigation" app:layout_constraintRight_toRightOf="parent"
			android:layout_margin="16dp"/>

	<android.support.design.widget.BottomNavigationView
			android:layout_width="0dp"
			android:layout_height="wrap_content" app:menu="@menu/navigation"
			app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/bottomNavigation"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
			android:elevation="8dp" android:background="@android:color/white" app:elevation="8dp">
	</android.support.design.widget.BottomNavigationView>
	<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/innerView"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/bottomNavigation">
	</LinearLayout>
</android.support.constraint.ConstraintLayout>